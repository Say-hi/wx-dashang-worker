<image mode='aspectFill' class="bg" src="{{ img }}"></image>

<view class="bg-w"></view>

<view class="content">
  <image class="userImg br" src="{{ userInfo.avatarUrl }}"></image>
  <view class="c-i"><input bindinput="inputValue" data-type="phone" maxlength="11" type="number" placeholder="请输入手机号"/></view>
  <view class="c-i"><input bindinput="inputValue" data-type="captcha" placeholder="请输入验证码"/><button class="{{ numberDisabled ? 'grow' : '' }}" disabled="{{ numberDisabled }}" catchtap="getNumber">{{ showText }}</button></view>
  <view class="c-i"><input bindinput="inputValue" data-type="name" placeholder="请输入昵称"/></view>
  <view class="c-i"><input bindinput="inputValue" data-type="pwd" placeholder="请输入密码"/></view>
  <view catchtap="register" class="c-i login">注册</view>
</view>